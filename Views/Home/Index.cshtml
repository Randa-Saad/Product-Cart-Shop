@*<h1>@e11.ProductPrice</h1>*@
@foreach (var item in Model)
{

    <div class="container">
        <div class="row">
            <div class="col">
                <div class="card" style="width: 14rem">
                    <div class=" card " style="width: 14rem; border-color:aquamarine;">
                        <img class="card-img-top" alt="Bologna " style="width:14rem; height:20rem;" src="https://cdn.shopify.com/s/files/1/0932/1794/products/HHH061_NesliNapDress_LightBlueGlitterCheck_A_grande.jpg?v=1612806356">
                        <div class="card-body">
                            <div style="visibility: hidden;">@item.ProductID</div>
                            <h4 class="card-title text-center ">@item.ProductName</h4>

                            <div class="card-body text-center ">

                                <hr>
                                <h6 class="mb-3 ">
                                    <span class="text-danger mr-1 ">Price</span>

                                    <span class="text-dark ">@item.ProductPrice $</span>
                                </h6>
                                <button>
                                    @*@Html.ActionLink("Add To Cart", "GoToCartView", "ProductID", new { Id = item.ProductID })*@
                                    @Html.ActionLink("Add To Cart", "GoToCartView", new { id = item.ProductID })
                                </button>

                                @*<button type="submit" class="text-center"><i class="fa fa-shopping-cart">Add To Cart</i></button>*@

                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

